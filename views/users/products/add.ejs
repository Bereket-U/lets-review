<%- include('../partials/users/header') %>
<%-
include('../partials/users/search') %>


<div class="form">
  <div class="container-login text-center">
    <h2>Add New Product</h2>
  <%= typeof message != 'undefined' ? message: '' %> <br />

  <form  method="post" enctype="multipart/form-data"  action="/users/products/create/<%= typeof userId != 'undefined' ? userId: '' %>">
    <input class="form-control form-control-md" type="text" name="name" placeholder="Product Name" required /> <br />
    <input class="form-control form-control-md" type="number" name="price" placeholder="Product Price" required /><br />
    <select  class="form-control form-control-md" name="category" required>
      <option value="">Select Category</option>
      <option value="Smartphone">Smartphone</option>
      <option value="Tablet">Tablets</option>
      <option value="Laptop">Laptop</option>
      <option value="Desktop">Desktop</option>
      <option value="Smart Tv">Smart Tv</option></select
    ><br />
    <input class="form-control form-control-md" type="file" name="image" id="image" required /><br />
    <textarea class="form-control form-control-md"
      name="discription"
      id="discription"
      placeholder="Please enter product discription" required
    ></textarea
    ><br />

    <button class="btn btn-outline-success">Add Product</button>
  </form>
  <%- include('../partials/users/footer') %>
</h1>
</div>
</div>
